{
  "name": "react-enable",
  "version": "2.0.3",
  "description": "feature flags to enable and disable functionality at runtime in a react application",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "lib": "es2015",
  "types": "./lib/esm/index.d.ts",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "test": "npx jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:pliosoft/react-enable.git"
  },
  "keywords": [
    "feature",
    "flag",
    "enable",
    "toggle"
  ],
  "author": "Christopher Lord",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/pliosoft/react-enable/issues"
  },
  "homepage": "https://github.com/pliosoft/react-enable#readme",
  "peerDependencies": {
    "react": "^17",
    "fp-ts": "^2.9",
    "tslib": "^1.11"
  },
  "devDependencies": {
    "@testing-library/react-hooks": "^5.1.0",
    "@types/jest": "^26.0.20",
    "@types/react": "^17",
    "fp-ts": "^2.9",
    "jest": "^26.6.3",
    "react": "^17",
    "react-test-renderer": "^17",
    "ts-jest": "^26.5.2",
    "tslib": "^1.11",
    "typescript": "^4.2"
  }
}
